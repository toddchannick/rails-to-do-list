<%= form_for task, :html => {:class => "to-do-form", :id => "to-do"}, remote: true do |f| %>

  <div class="form-group">
    <%= f.label :task, 'Task', class: 'sr-only' %>
    <%= f.text_field :description, autofocus: true, id:'task-input', autocomplete: "off", class: 'task-input form-control', placeholder: 'Enter to-do list item' %>
    <%= f.button :submit, class: 'btn btn-add hvr-icon-float btn-primary' do %>
      <span id="label">Add</span>
    <% end %>
  </div>

<% end %>
