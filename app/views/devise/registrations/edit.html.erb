<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-boot" }) do |f| %>
  <%= devise_error_messages! %>
  <h3 class="media-heading caps">Edit <%= resource_name.to_s.humanize %></h3><br>

  <div class="form-group">
    <%= f.label :email, 'Email Address', class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :current_password, 'Current Password', class: 'sr-only' %>
    <%= f.password_field :current_password, autocomplete: "off",  class: 'form-control', placeholder: 'Current Password' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'New Password', class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'New Password (8 characters minimum)' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,'Password Confirmation', class: 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Retype Password' %>
  </div>


  <div class="form-group">
    <%= f.submit "Update", class: 'btn btn-primary hvr-icon-forward' %>
  </div>
<% end %>

<hr>

<div class = "form-boot">
  <h3 class="media-heading caps">Cancel Account</h3><br>
  <div class="form-group"><%= button_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></div>
  <div class="form-group"><%= link_to "Go Back", authenticated_root_path, class: "btn btn-default" %></div>
</div>
