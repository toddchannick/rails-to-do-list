<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-boot"}) do |f| %>
  <%= devise_error_messages! %>
  <h3 class="media-heading caps">Forgot your Password?</h3><br>

  <div class="form-group">
    <%= f.label :email,'Email Address', class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address' %>
  </div>

  <div class="form-group">
    <%= f.submit "Send me reset instructions", class: 'btn btn-primary btn-md' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
